        <Label Content="Max:" Height="28" FontSize="11" HorizontalAlignment="Center" Margin="155,29,104,0" Name="label6" VerticalAlignment="Top" />
        <TextBox Height="22" HorizontalAlignment="Center" TextAlignment="Center" Name="output_max" VerticalAlignment="Top" Width="75" Margin="188,32,30,0" />
        <TextBox Height="23" HorizontalAlignment="Center" TextAlignment="Center" Margin="170,78,12,0" Name="stepsize" VerticalAlignment="Top" Width="110" />
        <Label Content="Measurement Interval:" FontWeight="Bold" Height="28" HorizontalAlignment="Center" Margin="12,117,142,0" Name="label4" VerticalAlignment="Top" Width="138" />
