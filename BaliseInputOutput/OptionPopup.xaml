        <Label Content="V" FontSize="11" Height="28" HorizontalAlignment="Center" Margin="261,31,14,0" Name="label8" VerticalAlignment="Top" />
        <Label Content="ms" FontSize="11" Height="28" HorizontalAlignment="Center" Margin="261,116,0,0" Name="label9" VerticalAlignment="Top" Width="31" />
        <Button Content="Save" Height="23" HorizontalAlignment="Center" Margin="124,200,92,0" Name="save_btn" VerticalAlignment="Top" Width="75" Click="save_btn_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Center" Margin="205,200,12,0" Name="cancel_btn" VerticalAlignment="Top" Width="75" Click="cancel_btn_Click" />
