        <Label Content="Total Step Size:" FontWeight="Bold" Height="28" HorizontalAlignment="Center" Margin="12,76,172,0" Name="label2" VerticalAlignment="Top" Width="107" />
        <Label Content="Min:" Height="28" FontSize="11" HorizontalAlignment="Center" Margin="22,29,225,0" Name="label3" VerticalAlignment="Top" />
